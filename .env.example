# ===================
# CONFIGURACIÓN GENERAL
# ===================

# Modo debug
DEBUG=False

# Dominio y hosts permitidos
ALLOWED_HOSTS=tu_dominio.com,www.tu_dominio.com

# ===================
# BASE DE DATOS
# ===================

# Engine de base de datos
DB_ENGINE=django.db.backends.postgresql

# Configuración PostgreSQL
DB_NAME=skincage_db
DB_USER=skincage_user
DB_HOST=db
DB_PORT=5432

# Nota: DB_PASSWORD se lee desde /run/secrets/db_password en producción
# y desde el archivo secrets/db_password.txt via Docker secrets

# ===================
# DJANGO SETTINGS
# ===================

# Secret key (se lee desde /run/secrets/secret_key en producción)
# Genera uno nuevo: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=tu_secret_key_aqui

# ===================
# NGINX
# ===================

# Dominio principal
NGINX_HOST=tu_dominio.com
NGINX_PORT=80
NGINX_PORT_HTTPS=443

# ===================
# DOCKER COMPOSE
# ===================

# Volúmenes
COMPOSE_PROJECT_NAME=skincage
